@model EasyBilling.Models.Marchent_Account
<!-- Index-Page-CSS -->
<link rel="stylesheet" href="~/UI styles/LOGIN/css/style.css" type="text/css" media="all">
<!-- //Custom-Stylesheet-Links -->
<!--fonts -->
<!-- //fonts -->
<link rel="stylesheet" href="~/UI styles/LOGIN/css/font-awesome.css" type="text/css" media="all">
<!-- //Font-Awesome-File-Links -->
<!-- Google fonts -->
<link href="//fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&amp;subset=devanagari,latin-ext" rel="stylesheet">
<!-- Google fonts -->
<!-- //Head -->
<!-- Body -->
<div class="bckapply w3-animate-top" style="animation-duration:2s">

    <h1 class="title-agile text-center">Easy Billing Sign up</h1>
    <div class="content-w3ls">
        <div class="content-bottom">
            <h2>Sign up Here <i class="fa fa-hand-o-down" aria-hidden="true"></i></h2>
         
            @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="field-group">
                <div class="wthree-field">
                    @Html.EditorFor(model => model.Marchent_name, new { htmlAttributes = new { @placeholder = "Marchent or company name", @name = "text1", @id = "text1" } })
                    @Html.ValidationMessageFor(model => model.Marchent_name, "", new { @class = "text-danger" })
                </div>
                <span class="fa fa-user" id="sspp" aria-hidden="true"></span>
            </div>
            <div class="field-group">

                <div class="wthree-field">
                    @Html.EditorFor(model => model.Email_Id, new { htmlAttributes = new { @placeholder = "Email id" } })
                    @Html.ValidationMessageFor(model => model.Email_Id, "", new { @class = "text-danger" })
                </div>
                <span class="fa fa-envelope" id="sspp" aria-hidden="true"></span>
            </div>

            <div class="field-group">

                <div class="wthree-field">
                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @placeholder = "Address" } })
                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                </div>
                <span class="fa fa-edit" id="sspp" aria-hidden="true"></span>
            </div>

            <div class="field-group">

                <div class="wthree-field">
                    @Html.EditorFor(model => model.Mobile, new { htmlAttributes = new { @placeholder = "Phone number" } })
                    @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger" })
                </div>
                <span class="fa fa-phone" id="sspp" aria-hidden="true"></span>
            </div>

            <div class="field-group">

                <div class="wthree-field">
                    @Html.EditorFor(model => model.Telephone_No, new { htmlAttributes = new { @placeholder = "Alternate phone number" } })
                    @Html.ValidationMessageFor(model => model.Telephone_No, "", new { @class = "text-danger" })
                </div>
                <span class="fa fa-phone-square" id="sspp" aria-hidden="true"></span>
            </div>

            <div class="field-group">

                <div class="wthree-field">
                    @Html.EditorFor(model => model.GSTIN_Number, new { htmlAttributes = new { @placeholder = "GSTIN number" } })
                    @Html.ValidationMessageFor(model => model.GSTIN_Number, "", new { @class = "text-danger" })
                </div>
                <span class="fa fa-edit" id="sspp" aria-hidden="true"></span>
            </div>

            <div class="field-group">

                <div class="wthree-field">
                    @Html.EditorFor(model => model.CIN_Number, new { htmlAttributes = new { @placeholder = "CIN number" } })
                    @Html.ValidationMessageFor(model => model.CIN_Number, "", new { @class = "text-danger" })
                </div>
                <span class="fa fa-edit" id="sspp" aria-hidden="true"></span>
            </div>

            <div class="field-group">

                <div class="wthree-field">
                    @Html.EditorFor(model => model.UIN_Number, new { htmlAttributes = new { @placeholder = "UIN number" } })
                    @Html.ValidationMessageFor(model => model.UIN_Number, "", new { @class = "text-danger" })
                </div>
                <span class="fa fa-edit" id="sspp" aria-hidden="true"></span>
            </div>

            <div class="field-group">

                <div class="wthree-field">
                    @*@Html.DropDownListFor(model => model.stcd, new List<SelectListItem>
                    { new SelectListItem{Text="Karnataka", Value="KA"},
                      new SelectListItem{Text="West Bengal", Value="WB"}}, "--------Please select state---------")*@

                    @Html.DropDownListFor(model => model.State_Code, new SelectList(ViewBag.states, "State_Code", "Name"), "-----Please select state-----")
                    @Html.ValidationMessageFor(model => model.State_Code, "", new { @class = "text-danger" })
                </div>

            </div>

            <div class="field-group">

                <div class="wthree-field">
                    @Html.EditorFor(model => model.Pan_Number, new { htmlAttributes = new { @placeholder = "Pan number" } })
                    @Html.ValidationMessageFor(model => model.Pan_Number, "", new { @class = "text-danger" })
                </div>
                <span class="fa fa-edit" id="sspp" aria-hidden="true"></span>
            </div>



            <div class="wthree-field">

                <input type="submit" id="saveForm" value="Sign up" class="btn btn-default" />

            </div>

            <div class="clearfix"></div>


    }


        </div>
        <br /><br /><br />
    </div>
</div>
