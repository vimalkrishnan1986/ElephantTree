@model IEnumerable<EasyBilling.Models.Tyre_size>

@{
    ViewBag.Title = "Index";
   
}

<link href="~/UI styles/datatables/datatables.min.css" rel="stylesheet" />
<script src="~/UI styles/datatables/datatables.min.js"></script>

<h2>Tyre size list</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="dataTable " id="table1">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tyre_size1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.With_tube)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tyre_size1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.With_tube)
            </td>
            <td>
                @Html.ActionLink("Edit", "Update", new { id = item.Token_number }) |
                @Html.ActionLink("Details", "Details", new { id = item.Token_number }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Token_number })
